<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/amiiboImage"
            android:layout_width="@dimen/amiibo_big_image_size"
            android:layout_height="@dimen/amiibo_big_image_size"
            android:layout_gravity="center"
            android:contentDescription="@string/amiibo_image_desc" />

        <TextView
            android:id="@+id/amiiboName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/default_padding"
            android:textColor="@color/black"
            android:textSize="@dimen/item_text_size"
            tools:text="Name" />

        <TextView
            android:id="@+id/amiiboSeries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/default_padding"
            android:textColor="@color/black"
            android:textSize="@dimen/item_text_size"
            tools:text="Series" />

        <TextView
            android:id="@+id/amiiboType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/default_padding"
            android:textColor="@color/black"
            android:textSize="@dimen/item_text_size"
            tools:text="Type" />

    </LinearLayout>

</ScrollView>
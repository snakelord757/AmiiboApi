<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/item_ripple_shape"
    android:elevation="@dimen/item_elevation"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/amiibo_item_vertical_padding"
    android:layout_marginVertical="@dimen/item_amiibo_vertical_margin"
    android:layout_marginHorizontal="@dimen/default_padding">

    <ImageView
        android:id="@+id/amiiboImage"
        android:layout_width="@dimen/amiibo_image_size"
        android:layout_height="@dimen/amiibo_image_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/amiiboName"
        android:contentDescription="@string/amiibo_image_desc" />

    <TextView
        android:id="@+id/amiiboName"
        android:gravity="center"
        android:textSize="@dimen/item_text_size"
        android:textColor="@color/black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/amiiboTailHorizontalMargin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/amiiboImage"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Toad"/>

</androidx.constraintlayout.widget.ConstraintLayout>